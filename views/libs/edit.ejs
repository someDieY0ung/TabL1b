<%- include("../partials/header") %>


<div class ='row' style = 'padding-top: 20px;'> 
    <h1 class = 'mx-auto'>Edit Lib "<%= lib.name %>"</h1>
</div>

<div class ='row'> 
    <div style="width: 30%; margin: 25px auto;">
        <form action="/libs/<%= lib._id %>/?_method=PUT" method = "POST">
            <div class = 'form-group'>
                <input class = 'form-control' type = 'text', name = 'lib[name]', placeholder="name", value="<%= lib.name %>">
            </div>
            <div class = 'form-group'>
                <input class = 'form-control' type = 'text', name = 'lib[image]', placeholder="image url", value="<%= lib.image %>">
            </div>
            <div class = 'form-group'>
                <button class="btn btn btn-outline-success btn-block">Update</button>
            </div>
            
        </form>
        <a href="/libs">Back</a>
    </div>
</div>
    




<%- include("../partials/footer") %>