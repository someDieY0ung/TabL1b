<%- include("../partials/header") %>



<div class='row text-center' style = 'padding-top: 25px'>
    <div class='col-lg-3 col-md-4'>
        <div class="card" >
            <div class="card-header font-weight-bold">
                <a href ="/libs/<%= Lib._id%>" class = "list-group-item-action"><%=Lib.name%></a>
                
            </div>
            <ul class="list-group list-group-flush">
                <% Lib.notations.forEach((notation)=>{ %>
                    <% if(this._id == foundNotation._id){ %>
                        <a href ="/libs/<%= Lib._id%>/notations/<%=notation._id%>" class = 'list-group-item list-group-item-action active'><%=notation.title %></a> 
                    <% }else{ %>
                        <a href ="/libs/<%= Lib._id%>/notations/<%=notation._id%>" class = 'list-group-item list-group-item-action'><%=notation.title %></a> 
                    <% } %>
                <%})%>
            </ul>
            <div class="card-footer">
                <a href="/libs/<%= Lib._id%>/notations/new" class="btn btn-outline-secondary btn-block">New Tab</a>
            </div>
        </div>     

        <div class="card" >
            <div class="card-body">
                <p class="card-text">Note: Click side area of tab to view prev/next </p>
                <a href="/libs/<%= Lib._id%>/notations/<%= foundNotation._id %>/edit" class="btn btn-outline-warning btn-block">Edit Tab</a>
                <form action ="/libs/<%= Lib._id%>/notations/<%= foundNotation._id %>/?_method=DELETE" method = "POST">
                    <button class="btn btn-outline-danger btn-block">Delete Tab</button>
                </form>
            </div>
        </div>     
    </div>

    <div class="col-lg-9 col-md-8">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="false">
            <div class="carousel-inner">
                <% for(var i=0; i<foundNotation.images.length;i++ ){ %>
                    <% if(i===0){%>
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="<%= foundNotation.images[i] %>" referrerPolicy = 'no-referrer' alt="Notation">
                        </div>
                    <%}else{ %>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="<%= foundNotation.images[i] %>" referrerPolicy = 'no-referrer' alt="Notation">
                        </div>
                    <%} %>
                <%} %>
                
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

    
<%- include("../partials/footer") %>